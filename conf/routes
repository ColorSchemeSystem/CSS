# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/template/:id             	controllers.Application.indexWithId(id: Long)
POST	/template/detail           	controllers.Application.detailTemp()
POST    /template/save    			controllers.Application.saveEditTemplate()
POST    /template/download			controllers.Application.download()
POST    /template/update/:id		controllers.AdminController.updateTemp(id: Long)
POST    /template/:id               controllers.Application.backToIndex(id: Long)
GET     /about                      controllers.Application.about()
GET     /login                      controllers.AdminController.login()
GET     /logout                     controllers.AdminController.logout()
POST    /login                      controllers.AdminController.loginEntry()
GET     /createAccount              controllers.AdminController.createAccount()
POST    /createAccount              controllers.AdminController.saveAccount()
GET     /editProfile         		controllers.AdminController.editProfile()
GET		/editColor					controllers.AdminController.editColor()
GET		/editPassword				controllers.AdminController.editPass()
GET     /editTemplate  				controllers.AdminController.editTempList()
POST    /saveProfileSetting         controllers.AdminController.saveProfileSetting()
POST    /saveColorSetting           controllers.AdminController.saveColorSetting()
POST    /modifyPassword             controllers.AdminController.doModifyPassword()  
POST    /template/delete/:id       	controllers.AdminController.deleteTmp(id: Long)
GET		/confirmPassword			controllers.AdminController.confirmPassword()
POST    /checkPassword              controllers.AdminController.checkPassword()
POST    /deleteAccount/:id          controllers.AdminController.deleteAccount(id: Long)

GET     /upload             		controllers.Application.upload()
POST    /upload             		controllers.Application.doUpload()
GET     /templates          		controllers.Application.templates()
GET     /images             		controllers.Application.images()
GET     /analyze            		controllers.Application.analyze()
POST    /analyze            		controllers.Application.doAnalyze()
GET     /colors             		controllers.Application.colors()
GET     /downloadTemplate           controllers.Application.downloadTemplate()
GET     /loadImage                  controllers.Application.loadImage()
GET     /loadImageName              controllers.Application.loadImageName()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
