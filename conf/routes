# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/template/:id             			controllers.Application.indexWithId(id: Long)
GET     /login                      controllers.AdminController.login()
GET     /logout                     controllers.AdminController.logout()
GET     /loginEntry                 controllers.AdminController.loginEntry()
GET     /createAccount              controllers.AdminController.createAccount()
GET     /saveAccount                controllers.AdminController.saveAccount()
GET     /myPage                     controllers.AdminController.myPage()
GET     /SaveChooserSetting         controllers.AdminController.saveChooserSetting()

GET     /upload             controllers.Application.upload()
POST    /upload             controllers.Application.doUpload()
GET     /templates          controllers.Application.templates()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
