# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/template/:id             			controllers.Application.indexWithId(id: Long)
GET     /login                      controllers.Application.login()
GET     /logout                     controllers.Application.logout()
GET     /loginEntry                 controllers.Application.loginEntry()
GET     /createAccount              controllers.Application.createAccount()
GET     /saveAccount                controllers.Application.saveAccount()
GET     /myPage                     controllers.Application.myPage()
GET     /test                       controllers.Application.test()

GET     /upload             controllers.AdminController.upload()
POST    /upload             controllers.AdminController.doUpload()
GET     /templates          controllers.Application.templates()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
